{
  "info": {
    "name": "Multi-Company Invoicing System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for testing RBAC-based multi-company invoicing system"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:3000"
    },
    {
      "key": "TOKEN",
      "value": ""
    },
    {
      "key": "INVOICE_ID",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/auth/login",
              "host": ["{{BASE_URL}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Invoices",
      "item": [
        {
          "name": "Create Invoice (BU)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"CARRY\",\n  \"originalCompanyId\": \"company-id-1\",\n  \"carryCompanyId\": \"company-id-2\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/invoices",
              "host": ["{{BASE_URL}}"],
              "path": ["invoices"]
            }
          }
        },
        {
          "name": "Submit Invoice (BU)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" }
            ],
            "url": {
              "raw": "{{BASE_URL}}/invoices/{{INVOICE_ID}}/submit",
              "host": ["{{BASE_URL}}"],
              "path": ["invoices", "{{INVOICE_ID}}", "submit"]
            }
          }
        },
        {
          "name": "Approve Invoice (BU Manager / Company)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"remarks\": \"Looks good\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/invoices/{{INVOICE_ID}}/approve",
              "host": ["{{BASE_URL}}"],
              "path": ["invoices", "{{INVOICE_ID}}", "approve"]
            }
          }
        },
        {
          "name": "Reject Invoice (BU Manager / Company)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"remarks\": \"Incorrect details\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/invoices/{{INVOICE_ID}}/reject",
              "host": ["{{BASE_URL}}"],
              "path": ["invoices", "{{INVOICE_ID}}", "reject"]
            }
          }
        },
        {
          "name": "Get Invoices (Role-based)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" }
            ],
            "url": {
              "raw": "{{BASE_URL}}/invoices",
              "host": ["{{BASE_URL}}"],
              "path": ["invoices"]
            }
          }
        }
      ]
    },
    {
      "name": "Reference Data",
      "item": [
        {
          "name": "Get Companies",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" }
            ],
            "url": {
              "raw": "{{BASE_URL}}/companies",
              "host": ["{{BASE_URL}}"],
              "path": ["companies"]
            }
          }
        },
        {
          "name": "Get Company Groups",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" }
            ],
            "url": {
              "raw": "{{BASE_URL}}/groups",
              "host": ["{{BASE_URL}}"],
              "path": ["groups"]
            }
          }
        }
      ]
    }
  ]
}
